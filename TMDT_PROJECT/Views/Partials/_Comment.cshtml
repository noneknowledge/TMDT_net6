@model IEnumerable<TMDT_PROJECT.Data.Library>;





<h1>Bình luận</h1>
<section style="background-color: #eee;">
    <div class="container my-5 py-5" style="height:100%">       
        @foreach (var item in Model)
        {
            <div class="row d-flex justify-content-center mt-2">
                <div class="col-md-12 col-lg-10 col-xl-8">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-start align-items-center">
                                <img class="rounded-circle shadow-1-strong me-3"
                                     src="https://www.vippng.com/png/full/416-4161690_empty-profile-picture-blank-avatar-image-circle.png" alt="avatar" width="60"
                                     height="60" />
                                <div>
                                    <h6 class="fw-bold text-primary mb-1">@item.UidNavigation.FullName</h6>
                               
                                        
                                        @if  (item.IsLiked == null)
                                        {
                                        <p class="text-muted small mb-0">không biểu cảm</p>
                                        }

                                    @if (item.IsLiked?.ToUpper() == "TRUE")
                                    {
                                        <p class="text-muted small mb-0">Thích trò chơi</p>
                                    }
                                    @if (item.IsLiked?.ToUpper() == "FALSE")
                                    {
                                        <p class="text-muted small mb-0">Không thích trò chơi</p>
                                    }
                                    
                                </div>
                            </div>

                            <p class="mt-3 mb-4 pb-2">
                                @item.FeedBack
                            </p>

                            
                        </div>
                    </div>
                </div>
            </div>
        }
        
        
    </div>
</section>