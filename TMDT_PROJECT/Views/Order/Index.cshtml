@model IEnumerable<TMDT_PROJECT.Data.Order>;

@{
    Layout = "/Views/Shared/_layoutTemplate.cshtml";
}




<section style="background-color: #eee;min-height:800px">
    <div class="container py-5">
        <div class="row justify-content-center mb-3">
            <div class="col-md-12 col-xl-10">
                @foreach (var item in Model)
                {
                    <div class="card shadow-0 border rounded-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-12 col-lg-3 col-xl-3 mb-4 mb-lg-0">
                                    <div class="bg-image hover-zoom ripple rounded ripple-surface">
                                        <img src="https://tse3.mm.bing.net/th?id=OIP._A75aieeytMZXe-1wu9nCwAAAA&pid=Api&P=0&h=220"
                                             class="w-100" />
                                        <a href="#!">
                                            <div class="hover-overlay">
                                                <div class="mask" style="background-color: rgba(253, 253, 253, 0.15);"></div>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                                <div class="col-md-6 col-lg-6 col-xl-6">
                                    <h5></h5>
                                    <div class="d-flex flex-row">
                                        @item.OrderDate
                                    </div>
                                    <h4 class="text-truncate mb-4 mb-md-0">
                                        Phương thưc thanh toán: @item.PaymentId
                                    </h4>
                                    <h4 class="text-truncate mb-4 mb-md-0">
                                        Số lượng sản phẩm mua: @item.OrderDetails.Count()
                                    </h4>
                                </div>
                                <div class="col-md-6 col-lg-3 col-xl-3 border-sm-start-none border-start">
                                    <div class="d-flex flex-row align-items-center mb-1">
                                        <h4 class="mb-1 me-1">$@Math.Round(item.Total.Value, 2)</h4>
                                        <span class="text-danger"><s></s></span>
                                    </div>
                                    <h6 class="text-success">Thanh toán thành công</h6>
                                    <div class="d-flex flex-column mt-4">
                                        <a asp-route-Odetail="@item.OrderId" asp-action="Orderdetail" asp-controller="Order" class="btn btn-primary btn-sm" type="button">Chi tiết</a>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>


    </div>
</section>